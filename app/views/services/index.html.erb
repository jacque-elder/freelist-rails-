<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To Freelist</h1>
            <p>The easiest way to advertise your freelance services!</p>
            <p>
                <%= link_to "Create an account", signup_path, class: "btn btn-primary btn-large" %>
            </p>
        </div>
    </header>
     
    <div class="row text-center" style="display:flex; flex-wrap: wrap; justify-content: center;">
        <% @services.each do |service| %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= service.image %>">
                   <div class="caption">
                       <h4><%= service.name %></h4>
                   </div>
                   <p>
                       <a href="/services/<%= service.id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% end %>
    <%= will_paginate %>
    </div>
</div>