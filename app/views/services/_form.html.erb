<%= form_for(@service) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

	<div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: 'What do you have to offer?' %>
    </div>
    <div class="form-group">
    	<%= f.number_field :price, class: 'form-control', placeholder: 'rate per hour', min: '0.00', step: '0.01' %>
    </div>
	<div class="form-group">
		<%= f.text_field :image, class: 'form-control', placeholder: 'image url' %>
    </div>
    <div class="form-group">
    	<%= f.text_field :email, class: 'form-control', placeholder: 'email' %>
    </div>
    <div class="form-group">
    	<%= f.text_field :website, class: 'form-control', placeholder: 'website' %>
    </div>
    <div class="form-group">
    	<%= f.text_field :phone, class: 'form-control', placeholder: 'phone number' %>
    </div>
    <div class="form-group">
        <%= f.text_area :description, class: 'form-control', placeholder: 'description', rows: '3' %>
    </div>
    <div class="form-group">
    	<%= f.submit yield(:button_text), class: "btn btn-lg btn-primary btn-block" %>
    </div>

 <% end %>